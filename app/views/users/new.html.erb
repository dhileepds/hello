<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>New User</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="<%= url_for :controller => 'cmms', :action => 'edit' %>">Dashboard</a>
            </li>
            <li class="active">
                <strong>New User</strong>
            </li>
        </ol>
    </div>
<div class="col-lg-2">

</div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            	<div class="col-md-6">
                <div class="ibox-content">
                 <h1>New User</h1>
               <%= form_for(@user) do |f| %>
                    <div class="form-group">
                        <%= f.text_field :username, class: 'form-control' ,:placeholder => "Username" %>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password_digest, class: 'form-control' ,:placeholder => "password"%>
                    </div>
                    <%= f.submit "Create", class: "btn btn-primary block  m-b" %>
                <% end %>
                </div>
            </div>
        </div>
    </div>
    
</div>
</div>

    
